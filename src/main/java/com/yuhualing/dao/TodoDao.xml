<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yuhualing.dao.TodoDao">
    <!-- 使用insert、update、delete、select标签编写sql语句 -->

    <insert id="insertTodo">
        insert into todo(text, completed) values (#{text}, #{completed})
    </insert>

    <select id="queryTodo" resultType="com.yuhualing.entity.Todo">
        select id, text, completed from todo order by id asc
    </select>
</mapper>
